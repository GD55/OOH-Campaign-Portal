<% include ./partials/header %>
<!-- show any messages that come back with authentication -->

<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> All Profile</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
        <% users.forEach(function(user){ %>
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="card rounded-lg bg-light">
                <div class="card-body">
                    <h3><span class="fa fa-user"></span>Local</h3>
                    <p>
                        <strong>id</strong>:
                        <%= user.id %><br>
                        <strong>designation</strong>:
                        <%= user.designation %><br>
                        <strong>username</strong>:
                        <%= user.name %><br>
                        <strong>office id</strong>:
                        <%= user.office_id %><br>
                        <strong>email</strong>:
                        <%= user.email %><br>
                        <strong>phone no</strong>:
                        <%= user.phone_no %>
                    </p>
                    <form id="delete" action="/deleteUser/<%= user.id%>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to Remove?');" <% if(currentUser.id == user.id){ %> disabled
                            <% } %>>DELETE</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% include ./partials/footer %>