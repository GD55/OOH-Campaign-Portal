<% include ./partials/header %>

<div class="container ">
    <div class="col-sm-6 mx-auto p-0 translucentBox">
        <h1 class="text-center bg-black py-2">LOGIN</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert translucentBox text-center">
            <%= message %>
        </div>
        <% } %>
        <div class="p-3">
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="d-flex">
                    <div class="">
                        <label class="py-2">USERNAME: </label>
                        <label  class="py-2">PASSWORD: </label>
                    </div>
                    <div class="">
                        <input type="text" class="w-100 my-2 text-body" name="username" autofocus required>
                        <input type="password" class="w-100 my-2 text-body" name="password" required>
                    </div>
                </div>
                <div class="form-group py-2">
                    <label class="pr-2">Keep Me Logged In :</label>
                    <input type="checkbox" class="mt-3" name="remember" value="yes">
                </div>
                <div class="text-center">
                    <button type="submit" class="buttona btn goldenYellow btn-lg">LOGIN</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer2 %>