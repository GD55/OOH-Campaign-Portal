<% include ./partials/header %>

<div class="container">
    <div class="col-sm-8 mx-auto">

        <h1 class="text-center"><i class="fas fa-sign-in-alt"></i> New Vendor</h1>

        <!-- NEW VENDOR FORM -->
        <form action="/venNet" method="post" enctype="multipart/form-data">
            <div class="border border-dark p-3">
                <div class="form-group">
                    <label>Type Of Organization</label>
                    <input type="text" class="form-control" name="organizationType">
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-group">
                    <label>Name of Vendor(Billing Name)</label>
                    <input type="text" class="form-control" name="vendorName">
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Contact Address</label>
                            <textarea class="form-control" rows="5" name="officeAddress"></textarea>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>City</label>
                                <input type="text" class="form-control" name="ocity">
                            </div>
                            <div class="form-group col-md-6 ">
                                <label>Pin Code</label>
                                <input type="number" class="form-control" name="opinCode">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>State</label>
                            <input type="text" class="form-control" name="ostate">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Registered Address</label>
                            <textarea class="form-control" rows="5" name="registeredAddress"></textarea>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>City</label>
                                <input type="text" class="form-control" name="rcity">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Pin Code</label>
                                <input type="number" class="form-control" name="rpinCode">
                            </div>
                        </div>

                        <div class="form-group">
                            <label>State</label>
                            <input type="text" class="form-control" name="rstate">
                        </div>
                    </div>
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-group">
                    <label>Website</label>
                    <input type="text" class="form-control" name="website">
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-group">
                    <label>Material Description</label>
                    <input type="text" class="form-control" name="materialDescription">
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-group">
                    <label>Services Description</label>
                    <input type="text" class="form-control" name="serviceDescription">
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label>Contact Person Name</label>
                        <input type="text" class="form-control" name="contactPersonName">
                    </div>
                    <div class="form-group col-md-4">
                        <label>Mobile No.</label>
                        <input type="number" class="form-control" name="mobileNo">
                    </div>
                    <div class="form-group col-md-4">
                        <label>Landline No.</label>
                        <input type="number" class="form-control" name="landlineNo">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Fax No.</label>
                        <input type="text" class="form-control" name="faxNo">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Email Id</label>
                        <input type="email" class="form-control" name="emailId">
                    </div>
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-group">
                    <label>Name in which the cheque to be issued (Bank Name)</label>
                    <input type="text" class="form-control" name="bankName">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Name Of Bank</label>
                        <input type="text" class="form-control" name="nameOfBank">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Bank Branch</label>
                        <input type="text" class="form-control" name="bankBranch">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>A/C No.</label>
                        <input type="number" class="form-control" name="accountNumber">
                    </div>
                    <div class="form-group col-md-6">
                        <label>IFSC Code</label>
                        <input type="text" class="form-control" name="ifscCode">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Please attach Cancelled Cheque Copy</label>
                    <input type="file" class="form-control-file" id="exampleFormControlFile1" name="cancelledCheque"
                        accept="image/*,.doc,.pdf">
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>GST(%)</label>
                        <input type="number" class="form-control" name="gstPercentage">
                    </div>
                    <div class="form-group col-md-6">
                        <label>TDS Rate(%)</label>
                        <input type="number" class="form-control" name="tdsPercentage">
                    </div>
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label>GST No.</label>
                        <input type="text" class="form-control" name="gstNo">
                    </div>
                    <div class="form-group col-md-4">
                        <label>State Code</label>
                        <input type="number" class="form-control" name="stateCode">
                    </div>
                    <div class="form-group col-md-4">
                        <label>SAC/HSN Code</label>
                        <input type="number" class="form-control" name="hsnCode">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="mt-3">PAN No.</label>
                        <input type="text" class="form-control" name="panNo">
                    </div>
                    <div class="form-group col-md-6">
                        <label>MSMED <small>(Micro, Small and Medium Enterprises Development Act, 2006)</small></label>
                        <input type="text" class="form-control" name="msmed">
                    </div>
                </div>
                <div class="form-group">
                    <label for="">Please attach the copy of Registration Certificate, PAN CARD, GST Certificate With
                        Stamp & Sign</label>
                    <input type="file" class="form-control-file" id="accounts" name="accountsFiles" multiple
                        accept="image/*,.doc,.pdf">
                    <small class="form-text text-muted">
                        *You can upload multiple image/files placed in a location locally by selecting
                        multiple images while holding ctrl key.
                    </small><br>
                </div>
            </div>
            <div class="border border-dark p-3">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Name of Person(Authorised Signatory)</label>
                        <input type="text" class="form-control" name="personName">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Designation</label>
                        <input type="text" class="form-control" name="designation">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Please attach Vendor Round Stamp</label>
                    <input type="file" class="form-control-file" id="" name="vendorRoundStamp"
                        accept="image/*,.doc,.pdf">
                </div>
            </div>
            <div class="text-center">
                <input type="submit" id="submitButton" class=" btn btn-outline-dark btn-lg my-3">
            </div>
        </form>
    </div>
</div>

<% include ./partials/footer %>